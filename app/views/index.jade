extends layout

block content

  .container
    h1= title

    .container(ng-controller="DoughnutCtrl")
      .row.chartWrapper
        canvas(id="chart" class="chart chart-doughnut" chart-data="data" chart-labels="labels")
      
      .row.btn-vote
        .btn-group(role='group')
          button.btn.btn-default.btn-lg(type='button' ng-click='vote(0)') {{labels[0]}}
          button.btn.btn-default.btn-lg(type='button' ng-click='vote(1)') {{labels[1]}}
          button.btn.btn-default.btn-lg(type='button' ng-click='vote(2)') {{labels[2]}}
        .btn-group
          button.btn.btn-default.btn-lg(type='button' ng-click='reset()') Reset
